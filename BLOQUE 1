//JAVASCRIPT
//5.-OBTENER INICIALES DE UN CARGO PROFECIONAL
function obtenerIniciales() {
    // Prompt de entrada
    const cargo = prompt("Ingrese el cargo profesional (ej: Director General Acad칠mico):");
    
    // Validaci칩n simple
    if (!cargo || cargo.trim().length === 0) {
        console.log("Entrada inv치lida.");
        alert("Entrada inv치lida.");
        return;
    }
    
    // L칩gica moderna de obtenci칩n de iniciales:
    // 1. split(' '): Divide la cadena por cada espacio
    // 2. map(palabra => palabra.charAt(0)): Toma el primer car치cter de cada palabra.
    // 3. join('.'): Une las letras con un punto entre ellas.
    // 4. toUpperCase(): Convierte todo a may칰sculas.
    // Se a침ade un punto final al final para coincidir con el formato D.G.A.
    const iniciales = cargo.split(' ')
                            .map(palabra => palabra.charAt(0))
                            .join('.')
                            .toUpperCase() + '.';
                            
    // Salida
    console.log(`Iniciales: ${iniciales}`);
    alert(`Iniciales: ${iniciales}`);
}

obtenerIniciales();
